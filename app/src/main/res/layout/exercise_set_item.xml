<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/set_card_view"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardBackgroundColor="@color/dark_blue"
    app:cardCornerRadius="10dp"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/set_number_LBL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_gravity="center"

        android:layout_weight="0.1"
        android:textSize="20sp"
        android:textColor="@color/ice_blue"
        android:text="1"
         />

    <TextView
        android:id="@+id/weight_LBL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:textColor="@color/ice_blue"
        android:layout_gravity="center"

        android:textSize="18dp"
        android:text="Weight"
         />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/ice_blue"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.3"

        app:cardCornerRadius="10dp"

        >

        <EditText
            android:id="@+id/weightEditText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/ice_blue"
            android:hint="Weight"
            android:autoSizeTextType="none"

            android:textColorHint="@color/ice_blue"
            android:inputType="number" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:textColor="@color/ice_blue"


        android:text="Reps"
         />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/ice_blue"
        android:layout_weight="1"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp"
        >

        <EditText
            android:id="@+id/reps_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/ice_blue"
            android:textColorHint="@color/ice_blue"
            android:hint="Reps"
            android:autoSizeTextType="none"

            android:layout_weight="1"

            android:inputType="number" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:background="@color/ice_blue"
        android:layout_margin="5dp"
        app:cardCornerRadius="20dp"
        android:layout_height="wrap_content">
    <CheckBox
        android:id="@+id/set_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </androidx.cardview.widget.CardView>

</LinearLayout>

</androidx.cardview.widget.CardView>