<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/set_card_view"
    android:layout_width="match_parent"
    android:longClickable="true"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/set_number_LBL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"

            android:layout_weight="0.1"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="1"
            />

        <TextView
            android:id="@+id/weight_LBL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:layout_gravity="center"

            android:textSize="18dp"
            android:text="Weight"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/ice_blue"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.8"
            app:cardCornerRadius="10dp"

            >

            <TextView
                android:id="@+id/sum_set_weight_textview"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@color/ice_blue"
                android:autoSizeTextType="none"
                android:text="Weight"
                android:layout_gravity="center"
                android:textColorHint="#7C7C7C"
                 />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textColor="@color/black"


            android:text="Reps"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/ice_blue"
            android:layout_weight="1"
            android:layout_gravity="center"
            app:cardCornerRadius="10dp"
            >

            <TextView
                android:id="@+id/sum_reps_textview"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@color/ice_blue"
                android:autoSizeTextType="none"
                android:text="reps"
                android:layout_gravity="center"
                android:textColorHint="#7C7C7C"
                />

        </androidx.cardview.widget.CardView>


    </LinearLayout>

</androidx.cardview.widget.CardView>